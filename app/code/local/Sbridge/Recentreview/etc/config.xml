<?xml version="1.0"?>
<config>
    <modules>
        <Sbridge_Recentreview>
            <version>0.1.0</version>
        </Sbridge_Recentreview>
    </modules>
    <frontend>
        <routers>
            <recentreview>
                <use>standard</use>
                <args>
                    <module>Sbridge_Recentreview</module>
                    <frontName>recentreview</frontName>
                </args>
            </recentreview>
        </routers>
        <layout>
            <updates>
                <recentreview>
                    <file>recentreview.xml</file>
                </recentreview>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <recentreview>
                <use>admin</use>
                <args>
                    <module>Sbridge_Recentreview</module>
                    <frontName>recentreview</frontName>
                </args>
            </recentreview>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Sbridge_Recentreview>
                            <title>Recentreview Module</title>
                            <sort_order>10</sort_order>
                        </Sbridge_Recentreview>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <recentreview>
                    <file>recentreview.xml</file>
                </recentreview>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <recentreview>
                <class>Sbridge_Recentreview_Model</class>
            </recentreview>            
            <recentreview_adminhtml>
                <class>Sbridge_Recentreview_Adminhtml_Model</class>
            </recentreview_adminhtml>
        </models>
        <resources>
            <recentreview_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </recentreview_write>
            <recentreview_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </recentreview_read>
        </resources>
        <helpers>
            <recentreview>
                <class>Sbridge_Recentreview_Helper</class>
            </recentreview>
        </helpers>
    </global>
</config>